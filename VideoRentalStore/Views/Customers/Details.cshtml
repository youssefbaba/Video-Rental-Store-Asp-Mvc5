@model VideoRentalStore.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>IsSubscribedToNewsletter : @Model.IsSubscribedToNewsletter</li>
    <li>Membership Type : @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birthdate : @String.Format("{0:dd MMMM yyyy}", Model.Birthdate)</li>
    }
</ul>