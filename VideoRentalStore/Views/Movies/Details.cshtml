@model VideoRentalStore.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Release Date : @String.Format("{0:dddd, MMMM d, yyyy}", Model.ReleaseDate)</li>
    <li>Date Added : @String.Format("{0:dddd, MMMM d, yyyy}", Model.DateAdded)</li>
    <li>Number In Stock : @Model.NumberInStock</li>
</ul>